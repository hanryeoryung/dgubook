<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:theme="@android:style/Theme.Light.NoTitleBar">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/main_color">
        <Space
            android:layout_width="135dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=" DGUBOOK"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textStyle="bold" />
        <Space
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/home_btn"
            android:id="@+id/search_home_btn"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="470dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:orientation="vertical"
            android:layout_weight="50"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff">
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/underbar"
                android:ems="10"
                android:singleLine="true"
                android:hint="책 제목"
                android:id="@+id/search_book_title"
                android:textSize="30px" />
                    <EditText
                        android:id="@+id/search_book_author"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:background="@drawable/underbar"
                        android:ems="10"
                        android:singleLine="true"
                        android:hint="저자"
                        android:paddingBottom="5dp"
                        android:textSize="30px" />
                    <EditText
                        android:id="@+id/search_book_publisher"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:background="@drawable/underbar"
                        android:ems="10"
                        android:singleLine="true"
                        android:hint="출판사"
                        android:paddingBottom="5dp"
                        android:textSize="30px" />
        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp">
        </Space>
            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/book_search"
                android:text="검색하기"
                android:textColor="#ffffff"
                android:background="@color/main_color"
                android:layout_gravity="center_horizontal"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:orientation="vertical"
            android:layout_weight="70"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff">
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_listView"
                android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/main_color">

        <Button
            android:layout_width="72dp"
            android:layout_height="fill_parent"
            android:textColor="@color/main_color"
            android:background="#ffffff"
            android:text="상세검색"
            android:id="@+id/search_button1" />
        <Button
            android:layout_width="72dp"
            android:layout_height="fill_parent"
            android:background="@color/main_color"
            android:text="교재등록"
            android:id="@+id/search_button2" />
        <Button
            android:layout_width="72dp"
            android:layout_height="fill_parent"
            android:background="@color/main_color"
            android:text="교재예약"
            android:id="@+id/search_button3" />
        <Button
            android:layout_width="72dp"
            android:layout_height="fill_parent"
            android:background="@color/main_color"
            android:text="메세지"
            android:id="@+id/search_button4" />
        <Button
            android:layout_width="74dp"
            android:layout_height="fill_parent"
            android:background="@color/main_color"
            android:text="나의정보"
            android:id="@+id/search_button5" />
    </LinearLayout>


</LinearLayout>
