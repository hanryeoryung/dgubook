<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.dgubook" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <!-- 추가된 라인들 : 3줄 gms-->
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 끝 -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".main.MainLoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.MainHomeActivity"
            android:label="@string/app_name" />
        <activity android:name=".main.BookDetailActivity"
            android:label="Dgubook"/>
        <activity
            android:name=".action_book.ReserveAtivity"
            android:label="Dgubook" />
        <activity
            android:name=".action_book.PurchaseBookActivity"
            android:label="Dgubook" />
        <activity
            android:name=".action_book.LendBookActivity"
            android:label="Dgubook" />
        <activity
            android:name=".action_book.SearchAtivity"
            android:label="Dgubook" />
        <activity
            android:name=".action_book.UploadAtivity"
            android:label="Dgubook" />
        <activity
            android:name=".join.JoinActivity"
            android:label="Dgubook" />
        <activity
            android:name=".join.JoinConfirmActivity"
            android:label="Dgubook" />
        <activity
            android:name=".messenger.MessengerAtivity"
            android:label="Dgubook" />
        <activity
            android:name=".messenger.MessengerTwoAtivity"
            android:label="Dgubook" />
        <activity
            android:name=".setting.InfoAtivity"
            android:label="Dgubook" />
        <activity
            android:name=".setting.ChangePasswordActivity"
            android:label="Dgubook"/>

        <activity
            android:name=".SplashActivity"
            android:label="Dgubook" />
        <activity
            android:name=".SearchBookUseNaverUploadActivity"
            android:label="Dgubook"/>
        <activity
            android:name=".SearchBookUseNaverReserveActivity"
            android:label="Dgubook"/>


        <activity
            android:name=".push.PushTest"
            android:label="Dgubook"/>
        <!-- 여기서부터 추가 시작 gms-->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="net.saltfactory.demo.gcm" />
            </intent-filter>
        </receiver>
        <!-- GCM Receiver end -->

        <!-- GCM Listener start -->
        <service
            android:name=".push.DGUGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- GCM Listener end -->

        <!-- GCM Instance id start -->
        <service
            android:name=".push.DGUInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- GCM Instance id end -->

        <!-- GCM Registration service start -->
        <service
            android:name=".push.RegistrationIntentService"
            android:exported="false"/>
        <!-- 추가 끝.-->
    </application>

</manifest>
