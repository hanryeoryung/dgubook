<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:theme="@android:style/Theme.Light.NoTitleBar"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/main_color">
        <Space
            android:layout_width="135dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=" DGUBOOK"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textStyle="bold" />
        <Space
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/home_btn"
            android:id="@+id/detail_home_btn"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목 :   "
                android:textSize="40px"
                android:textColor="@color/main_color"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:ems="10"
                android:singleLine="true"
                android:id="@+id/detail_book_title"
                android:textSize="30px" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="3dp">
                    </Space>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="저자 :   "
                            android:textSize="40px"
                            android:textColor="@color/main_color"/>
                        <TextView
                        android:id="@+id/detail_book_author"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:singleLine="true"
                        android:paddingBottom="5dp"
                        android:textSize="30px" />
                        </LinearLayout>
                    <Space
                        android:layout_width="fill_parent"
                        android:layout_height="3dp">
                    </Space>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="출판사 :   "
                            android:textSize="40px"
                            android:textColor="@color/main_color"/>
                    <TextView
                        android:id="@+id/detail_book_publisher"
                        android:layout_width="150dp"
                        android:layout_height="45dp"
                        android:ems="10"
                        android:singleLine="true"
                        android:paddingBottom="5dp"
                        android:textSize="30px" />
                        </LinearLayout>
                </LinearLayout>
                <Space
                    android:layout_width="30dp"
                    android:layout_height="fill_parent" />
                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/no_image"
                    android:id="@+id/detail_book_image" />
            </LinearLayout>
            <Space
                android:layout_width="fill_parent"
                android:layout_height="3dp">
            </Space>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정가 :   "
                android:textSize="40px"
                android:textColor="@color/main_color"/>
            <TextView
                android:id="@+id/detail_public_price"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:ems="10"
                android:singleLine="true"
                android:textSize="30px" />
            </LinearLayout>
            <Space
                android:layout_width="fill_parent"
                android:layout_height="3dp">
            </Space>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="판매자가 원하는 가격 :   "
                android:textSize="40px"
                android:textColor="@color/main_color"/>
        <TextView
            android:id="@+id/detail_personal_price"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:ems="10"
            android:singleLine="true"
            android:textSize="30px" />
            </LinearLayout>
        <Space
            android:layout_width="fill_parent"
            android:layout_height="20dp">
        </Space>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:id="@+id/detail_send_message"
                android:text="메세지보내기"
                android:textColor="#ffffff"
                android:background="@color/main_color"
                android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>
